<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_daytime_material_blue"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/headerGraphics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/view_header" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_alignTop="@id/headerGraphics"
            android:layout_marginTop="30.0dp"
            android:gravity="center_horizontal"
            android:paddingTop="10.0dp"
            android:text="@string/text_global_settings"
            android:textColor="@color/background_daytime_material_blue"
            android:textSize="27.0sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/headerGraphics"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="68.0dp"
            android:src="@drawable/settings_badge" />


    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>